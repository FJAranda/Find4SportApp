<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivItemQuedada"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tvFechaItemQuedada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf= "@+id/ivItemQuedada"
            android:layout_below="@+id/tvTituloItemQuedada"
            android:text="TextView" />

            <TextView
                android:id="@+id/tvTituloItemQuedada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/ivItemQuedada"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvHoraItemQuedada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvFechaItemQuedada"
                android:layout_toRightOf="@+id/tvFechaItemQuedada"
                android:layout_marginLeft="16dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvParticipantesItemQuedada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_alignBottom="@+id/tvTituloItemQuedada"
                android:layout_toRightOf="@+id/tvTituloItemQuedada"
                android:text="TextView" />
        </RelativeLayout>
</android.support.v7.widget.CardView>